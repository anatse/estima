{
  "exclude": [
    "node_modules",
    "**/*.(test|spec).(ts|tsx)"
  ],
  "include": [
    "src/frontend/**/*"
  ],
  "compilerOptions": {
    "outDir": "./views/dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "types" : [
      "jest",
      "lodash",
      "react",
      "react-dom",
      "react-redux",
      "react-router-dom",
      "redux"
    ]
  }
}
